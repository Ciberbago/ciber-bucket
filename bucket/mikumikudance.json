{
    "version": "9.3.2",
    "description": "MikuMikuDance is a free 3D animation software developed as a promotional element for fans of the Sony/Sega Vocaloid product.",
    "homepage": "http:/learnmmd.com/",
    "license": "Freeware",
    "notes": "This version also contains erotic motions and MME installed with the scale effect included",
    "architecture": {
        "64bit": {
            "url": "https://drive.google.com/uc?id=1B6q_GvCCgV9nRAnI-w9N5_xpJfELeaHW&export=download#/dl.7z",
            "hash": "d06ccd25a55593881d440e05e521227ad8c77028de8b7aa2c1e5d91b3c3a571d"
        }
    },
    "pre_install": [
        "ensure $persist_dir | Out-Null",
        "$file = 'Data\\mmconfig.ini'",
        "if (-not (Test-Path (Join-Path $persist_dir $file))) {",
        "    New-Item -Path (Join-Path $dir $file) -ItemType File | Out-Null",
        "}"
    ],
    "bin": "MikuMikuDance.exe",
    "shortcuts": [
        [
            "MikuMikuDance.exe",
            "MikuMikuDance"
        ]
    ],
    "persist": [
        "UserFile",
        "Data\\mmconfig.ini"
    ]
}

